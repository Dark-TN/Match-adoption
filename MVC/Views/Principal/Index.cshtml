
@model MVC.Models.Negocio.Usuario.OUsuario

@{
    ViewBag.Title = "Match Adoption";
    Layout = "~/Views/Shared/_MasterInicio.cshtml";
}
<script type="text/javascript" src="~/Scripts/Pagina/Principal/Principal.js"></script>

<script type="text/javascript">
        @Html.Raw(ViewBag.Mensaje)
</script>

<div class="row text-center">
    <h1>¿Estás listo para adoptar?</h1>
    <h2>Descúbrelo</h2>
</div>

<div class="row center">
    <div class="col-sm-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Recursos/Imagenes/banner1.jpg" alt="">
                </div>
                <div class="item">
                    <img src="~/Recursos/Imagenes/banner2.jpg" alt="">
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div id="modal-login" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Iniciar sesión</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
                {
                    <div class="row row-form">
                        <div class="col-sm-6">
                            <label>Correo electr&oacute;nico:</label>
                            @Html.TextBoxFor(x => x.CorreoElectronico, new { @class = "form-control Correo", required = "required" })
                        </div>
                        <div class="col-sm-6">
                            <label>Contraseña:</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", required = "required" })
                        </div>
                    </div>
                    <div class="row row-form">
                        <div class="col-sm-12 text-center">
                            <label><a href="@Url.Action("RecuperarPassword","Principal")">Olvidé mi contraseña</a>.</label>
                        </div>
                    </div>
                    <div class="row row-form">
                        <div class="col-sm-12 text-center">
                            <label>¿No tienes cuenta? <a data-dismiss="modal" data-toggle="modal" href="#modal-register">Reg&iacute;strate</a>.</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-success">Iniciar sesi&oacute;n</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

