
@model MVC.Models.Negocio.Usuario.OUsuario

@{
    ViewBag.Title = "Match Adoption";
    Layout = "~/Views/Shared/_MasterInicio.cshtml";
}
<script type="text/javascript" src="~/Scripts/Pagina/Principal/Principal.js"></script>

<script type="text/javascript">
        @Html.Raw(ViewBag.Mensaje)
</script>

<div class="row text-center">
    <h1>¿Estás listo para adoptar?</h1>
    <h2>Descúbrelo</h2>
</div>

<div class="row center">
    <div class="col-sm-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Recursos/Imagenes/ejemplo.png" alt="">
                </div>
                <div class="item">
                    <img src="~/Recursos/Imagenes/logo.png" alt="">
                </div>
                <div class="item">
                    <img src="~/Recursos/Imagenes/logo_letras.png" alt="">
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div id="modal-login" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Iniciar sesión</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
                {
                    <div class="row row-form">
                        <div class="col-sm-6">
                            <label>Correo electr&oacute;nico:</label>
                            @Html.TextBoxFor(x => x.CorreoElectronico, new { @class = "form-control Correo", required = "required" })
                        </div>
                        <div class="col-sm-6">
                            <label>Contraseña:</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password", required = "required" })
                        </div>
                    </div>
                    <div class="row row-form">
                        <div class="col-sm-12 text-center">
                            <label>¿No tienes cuenta? <a data-dismiss="modal" data-toggle ="modal" href="#modal-register">Reg&iacute;strate</a>.</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="col-sm-12 text-right">
                            <button type="submit" class="btn btn-success">Iniciar sesi&oacute;n</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div id="modal-register" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Registro</h4>
            </div>
            <div class="modal-body">

                <ul class="nav nav-pills">
                    <li class="active">
                        <a href="#1a" data-toggle="tab">Solicitante</a>
                    </li>
                    <li>
                        <a href="#2a" data-toggle="tab">Empleado</a>
                    </li>
                </ul>

                <div class="tab-content clearfix">
                    <div class="tab-pane active" id="1a">
                        @using (Html.BeginForm("RegistroSolicitante", "Usuario", FormMethod.Post))
                        {
                        <div class="row row-form">
                            <div class="col-sm-4">
                                <label>CURP:</label>
                                <input type="text" class="form-control CURP" name="txtCURPUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Nombre:</label>
                                <input type="text" class="form-control Alfa" name="txtNombreUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Fecha de nacimiento:</label>
                                <input type="text" class="form-control datepicker Fecha" name="dtFechaNacimientoUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Sexo:</label>
                                <select class="form-control" name="sctSexoUsuario" id="sctSexoUsuario" required>
                                    <option value="0">Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>Estado civil:</label>
                                <select class="form-control" name="sctEstadoCivil" id="sctEstadoCivil" required>
                                    <option value="0">Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>Nivel de estudios:</label>
                                <select class="form-control" name="sctNivelEstudios" id="sctNivelEstudios" required>
                                    <option value="0">Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>Ocupación:</label>
                                <input type="text" class="form-control Alfa" name="txtOcupacion" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Dirección:</label>
                                <input type="text" class="form-control Alfanumerico" name="txtDireccion" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Teléfono:</label>
                                <input type="text" class="form-control Telefono" name="txtTelefonoUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Correo electr&oacute;nico:</label>
                                <input type="text" class="form-control Correo" name="txtCorreoRegistroUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Contraseña:</label>
                                <input type="password" class="form-control Password" name="txtPasswordRegistroUsuario" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Confirmar contraseña:</label>
                                <input type="password" class="form-control Password" name="txtConfirmarPasswordRegistroUsuario" required />
                            </div>
                            <div class="col-sm-12 reCaptchaContainer">
                                <div class="g-recaptcha" data-sitekey="6LftBosaAAAAAO6f9mxfmfcbPFIlVfl57uC23dJZ"></div>
                            </div>
                        </div>
                            <div class="row row-form">
                                <div class="col-sm-12 text-center">
                                    <label>¿Ya tienes una cuenta? <a data-dismiss="modal" data-toggle ="modal" href="#modal-login">Inicia sesi&oacute;n</a>.</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="col-sm-12 text-right">
                                    <button type="submit" class="btn btn-success">Registrarse</button>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="tab-pane" id="2a">
                        @using (Html.BeginForm("RegistroEmpleado", "Usuario", FormMethod.Post))
                        {
                        <div class="row row-form">
                            <div class="col-sm-4">
                                <label>CURP:</label>
                                <input type="text" class="form-control CURP" name="txtCURPEmpleado" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Nombre:</label>
                                <input type="text" class="form-control Alfa" name="txtNombreEmpleado" required />
                            </div>

                            <div class="col-sm-4">
                                <label>Sexo:</label>
                                <select class="form-control" name="sctSexoUsuario2" id="sctSexoUsuario2" required>
                                    <option value="0">Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>Centro de labores:</label>
                                <select class="form-control" name="sctCentroLabores" id="sctCentroLabores" required>
                                    <option value="0">Selecciona una opción</option>
                                </select>
                            </div>
                            <div class="col-sm-4">
                                <label>Teléfono:</label>
                                <input type="text" class="form-control Telefono" name="txtTelefonoEmpleado" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Correo electr&oacute;nico:</label>
                                <input type="text" class="form-control Correo" name="txtCorreoRegistroEmpleado" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Fecha de ingreso:</label>
                                <input type="text" class="form-control datepicker Fecha" name="dtFechaIngreso" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Contraseña:</label>
                                <input type="password" class="form-control Password" name="txtPasswordRegistroEmpleado" required />
                            </div>
                            <div class="col-sm-4">
                                <label>Confirmar contraseña:</label>
                                <input type="password" class="form-control Password" name="txtConfirmarPasswordRegistroEmpleado" required />
                            </div>
                            <div class="col-sm-12 reCaptchaContainer">
                                <div class="g-recaptcha" data-sitekey="6LftBosaAAAAAO6f9mxfmfcbPFIlVfl57uC23dJZ"></div>
                            </div>
                        </div>
                            <div class="row row-form">
                                <div class="col-sm-12 text-center">
                                    <label>¿Ya tienes una cuenta? <a data-dismiss="modal" data-toggle="modal" href="#modal-login">Inicia sesi&oacute;n</a>.</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="col-sm-12 text-right">
                                    <button type="submit" class="btn btn-success">Registrarse</button>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
